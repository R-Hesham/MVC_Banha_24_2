@model Instructor
@ViewBag.extra
<div class="card">
    <div class="card-header">
       @Model.Name
    </div>
    <div class="card-body">
        <blockquote class="blockquote mb-0">
            <p>@Model.Degree</p>
            <footer class="blockquote-footer"><a asp-action="Details" asp-controller="Instructor" asp-route-id="@Model.Id">Details</a> <cite title="Source Title">Source Title</cite></footer>
        </blockquote>
    </div>
</div>