@{
    int i = 0;
}

@model List<Student>

    <a asp-action="Add" asp-controller="Validation" >Add</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Handle</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Student std in Model)
       { <tr>
            <th scope="row">@(++i)</th>
            <td>@std.Name</td>
            <td>@std.Age</td>
            <td> <a>Details</a> 
                | <a>Edit</a> 
                | <a>Delete</a></td>
        </tr>
       } 
    </tbody>
</table>
