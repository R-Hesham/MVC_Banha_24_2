@{
    int i = 0;
}
@model List<Department>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Location</th>
            <th scope="col">Handle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@(++i)</th>
                <td>@item.Name</td>
                <td>@item.Location</td>
                <td>
                    <a href="/department/details/@item.Id">Details</a> |
                    <a href="">Edit</a> |
                    <a href="">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
