@model List<Instructor>
@{
    int i = 0; 
}

<a class="btn btn-success" href="/instructor/getaddform">Add</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Department</th>
            <th scope="col">Handle</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
        <tr>
            <th scope="row">@(++i)</th>
            <td>@item.Name</td>
            <td>@item.workDepartment?.Name</td>
            <td><a href="/instructor/details/@item.Id">Details</a> |
                    <a href="/instructor/GetEditForm/@item.Id">Edit</a> |
                    <a href="/instructor/delete/@item.Id">Delete</a> 

                </td>
        </tr>
        }
    </tbody>
</table>
