@{
}
@model Instructor

<h1>Edit Instructor</h1>
<form action="/instructor/update">
    <input name="id" hidden value="@Model.Id"/>
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="Text" class="form-control" id="name" name="name" value="@Model.Name">
    </div>
    <div class="mb-3">
        <label for="degree" class="form-label">Degree</label>
        <input type="Text" class="form-control" id="degree" name="degree" value="@Model.Degree">
    </div>
    <div class="mb-3">
        <label for="salary" class="form-label">Salary</label>
        <input type="number" class="form-control" id="salary" name="salary" value="@Model.Salary">
    </div>

    <div class="mb-3 form-check">
        <label class="form-check-label" for="department">Department</label>
        <select name="deptId" id="department">
            @foreach (Department item in ViewBag.departments)
            {
                if(Model.Dept_Id == item.Id)
                {
                    <option value="@item.Id" selected>@item.Name</option>
                }
                else
                {
                    <option value="@item.Id">@item.Name</option>

                }
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
</form>